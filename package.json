{
  "name": "rummy-ui",
  "version": "0.0.1",
  "description": "A toolkit UI build by React,Typescript.",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist && cross-env NODE_ENV=production webpack --config ./build/webpack.pro.js",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --config ./build/webpack.dev.js --color",
    "build:docs": "rm -rf ./docs && cross-env NODE_ENV=production webpack --config ./build/webpack.docs.js --color",
    "test": "cross-env NODE_ENV=test jest --config=jest.config.js --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --config=jest.config.js --runInBand --watch",
    "ci": "cross-env NODE_ENV=test JEST_JUNIT_OUTPUT_DIR=./test-results/jest JEST_JUNIT_OUTPUT_NAME=results.xml jest --config=jest.config.js",
    "depoly": "sh ./depoly.sh",
    "depoly:docs": "sh ./docs.sh"
  },
  "files": [
    "./dist",
    "./dist/**/*.css"
  ],
  "types": "./dist/lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linxiaodi/rummy-ui.git"
  },
  "keywords": [],
  "author": "latiao",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/linxiaodi/rummy-ui/issues"
  },
  "homepage": "https://linxiaodi.github.io/rummy-ui/",
  "dependencies": {
    "classnames": "^2.2.6",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@hot-loader/react-dom": "^16.10.2",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/react-router": "^5.1.2",
    "@types/react-router-dom": "^5.1.2",
    "@types/react-transition-group": "^4.2.3",
    "awesome-typescript-loader": "^5.2.1",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^6.0.3",
    "css-loader": "^3.2.0",
    "cssnano": "^4.1.10",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.2",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "jest-junit": "^9.0.0",
    "marked": "^0.8.0",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.13.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "prism-react-renderer": "^1.0.2",
    "raw-loader": "^4.0.0",
    "react-hot-loader": "^4.12.13",
    "react-test-renderer": "^16.10.2",
    "rimraf": "^3.0.0",
    "sass-loader": "^8.0.0",
