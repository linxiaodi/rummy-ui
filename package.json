{
	"name": "rummy-ui",
	"version": "0.0.6",
	"description": "A toolkit UI build by React,Typescript.",
	"main": "dist/index.js",
	"scripts": {
		"build": "NODE_ENV=production webpack --config ./build/webpack.pro.js --color --progress",
		"type-check": "tsc --watch",
		"dev": "NODE_ENV=development webpack serve --config ./build/webpack.dev.js --color",
		"build:docs": "NODE_ENV=production webpack --config ./build/webpack.docs.js --color --progress",
		"test": "NODE_ENV=test jest --config=jest.config.js --runInBand",
		"test:watch": "NODE_ENV=test jest --config=jest.config.js --runInBand --watch",
		"ci": "NODE_ENV=test JEST_JUNIT_OUTPUT_DIR=./test-results/jest JEST_JUNIT_OUTPUT_NAME=results.xml jest --config=jest.config.js",
		"depoly": "sh ./depoly.sh",
		"depoly:docs": "sh ./docs.sh"
	},
	"files": [
		"dist",
		"lib"
	],
	"types": "./dist/lib/index.d.ts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/linxiaodi/rummy-ui.git"
	},
	"keywords": [],
	"author": "latiao",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/linxiaodi/rummy-ui/issues"
	},
	"homepage": "https://linxiaodi.github.io/rummy-ui/",
	"dependencies": {
		"prop-types": "^15.7.2",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-router-dom": "^5.1.2"
	},
	"devDependencies": {
		"@babel/core": "^7.6.0",
		"@babel/preset-env": "^7.6.0",
		"@babel/preset-react": "^7.0.0",
		"@babel/preset-typescript": "^7.9.0",
		"@hot-loader/react-dom": "^17.0.1",
		"@types/classnames": "^2.2.9",
		"@types/jest": "^26.0.22",
		"@types/node": "^14.14.37",
		"@types/prop-types": "^15.7.3",
		"@types/react": "^17.0.3",
		"@types/react-dom": "^17.0.3",
		"@types/react-router": "^5.1.2",
		"@types/react-router-dom": "^5.1.2",
		"@types/react-transition-group": "^4.2.3",
		"babel-jest": "^26.6.3",
		"babel-loader": "^8.0.6",
		"clean-webpack-plugin": "^3.0.0",
